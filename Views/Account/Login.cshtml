@model LoginViewModel

<h2>Connexion</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label for="UserName">Nom d'utilisateur</label>
        <input type="text" id="UserName" name="UserName" class="form-control" asp-for="UserName">
    </div>
    <div class="form-group">
        <label for="Password">Mot de passe</label>
        <input type="password" id="Password" name="Password" class="form-control" asp-for="Password">
    </div>
    <div class="form-group">
        <div class="custom-control custom-checkbox">
            <input type="checkbox" id="RememberMe" name="RememberMe" class="custom-control-input" asp-for="RememberMe">
            <label class="custom-control-label" for="RememberMe">Se souvenir de moi</label>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Connexion</button>
</form>
