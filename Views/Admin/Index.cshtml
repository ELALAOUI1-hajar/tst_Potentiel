@model List<testi.DBContext.Candidat>
@{
    ViewData["Title"] = "Liste des Candidatures";
}

<h2 class="card text-bg-primary mb-3">Liste des Candidatures</h2>

<div class="row mb-4">
    <div class="col-md-12">
    <form asp-controller="Admin" asp-action="Index" method="get">
        <div class="input-group">
            <input type="text" name="Nom" placeholder="Nom" class="form-control" value="@Context.Request.Query["Nom"].ToString()" />
            <input type="text" name="Prenom" placeholder="Prénom" class="form-control" value="@Context.Request.Query["Prenom"].ToString()" />
            <input type="text" name="Email" placeholder="Email" class="form-control" value="@Context.Request.Query["Email"].ToString()" />
            <input type="text" name="Telephone" placeholder="Téléphone" class="form-control" value="@Context.Request.Query["Telephone"].ToString()" />
            <div class="input-group-append">
                <button type="submit" class="btn btn-primary">Rechercher</button>
            </div>
        </div>
    </form>
</div>
    <div class="col-md-12 mt-3">
        <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
    </div>

</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Téléphone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidat in Model)
            {
                    <tr>
                        <td>@candidat.Nom</td>
                        <td>@candidat.Prenom</td>
                        <td>@candidat.Email</td>
                        <td>@candidat.Telephone</td>
                        <td>
                            <a href="@Url.Action("AfficherCV", "Admin", new { id = candidat.Id })" class="btn btn-warning">Ouvrir CV</a>
                            <a href="@Url.Action("SupprimerCandidature", "Admin", new { id = candidat.Id })" class="btn btn-danger">Supprimer</a>
                        </td>
                    </tr>
            }
        </tbody>
    </table>
</div>
